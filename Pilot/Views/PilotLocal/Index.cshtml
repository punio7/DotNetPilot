@{
    ViewData["Title"] = "Pilot medialny";
}

@section DevStyles
{
    <link rel="stylesheet" href="~/css/pilotLocal.css" />
}

@section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/pilotLocal.js"></script>
}

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="col-sm-12 col-md-4 col-lg-3">
        <img id="songImage" class="media-object song-cover" src="" />
        <div id="karaokeBox" class="karaoke">
        </div>
        <div class="row">&nbsp;</div>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-9">
        <div class="input-group row">
            <span id="songTrackAddon" class="input-group-addon">Ścieżka</span>
            <input type="text" readonly class="form-control" id="songTrack" aria-describedby="songTrackAddon" value="">
        </div>
        <div class="input-group row">
            <span id="songTitleAddon" class="input-group-addon">Tytuł</span>
            <input type="text" readonly class="form-control" id="songTitle" aria-describedby="songTitleAddon" value="">
        </div>
        <div class="input-group row">
            <span id="songArtistAddon" class="input-group-addon">Wykonawca</span>
            <input type="text" readonly class="form-control" id="songArtist" aria-describedby="songArtistAddon" value="">
        </div>
        <div class="input-group row">
            <span id="songAlbumAddon" class="input-group-addon">Album</span>
            <input type="text" readonly class="form-control" id="songAlbum" aria-describedby="songAlbumAddon" value="">
        </div>
        <div class="input-group row">
            <span id="songYearAddon" class="input-group-addon">Rok</span>
            <input type="text" readonly class="form-control" id="songYear" aria-describedby="songYearAddon" value="">
        </div>
        <div class="input-group row">
            <span id="songGenereAddon" class="input-group-addon">Gatunek</span>
            <input type="text" readonly class="form-control" id="songGenere" aria-describedby="songGenereAddon" value="">
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div id="songTime" class="pull-right"></div>
    </div>
    <div class="row">
        <div class="progress">
            <div id="songProgress" class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%; transition:2000ms;">
                <span class="sr-only">45% Complete</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <button id="mediaButton" class="btn btn-default"><i class="fa fa-music"></i></button>
            <button id="playButton" class="btn btn-default"><i class="fa fa-play"></i> / <i class="fa fa-pause"></i></button>
            <button id="prevButton" class="btn btn-default"><i class="fa fa-backward"></i></button>
            <button id="nextButton" class="btn btn-default"><i class="fa fa-forward"></i></button>
            <button id="stopButton" class="btn btn-default"><i class="fa fa-stop"></i></button>
            <button id="infoButton" class="btn btn-default"><i class="glyphicon glyphicon-refresh"></i></button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <img id="qrCodeSiteUrl" class="media-object img-responsive center-block"
                 src="@Url.Action("SiteUrl", "QrCode")" />
        </div>
    </div>
</div>

